<h1>Edit Task</h1>

<form action="/tasks<%= @task.id %>" method:"post">
  <input type="hidden" name="authenticity_token" value="PATCH" />
  <p>Edit</p>
  <input type="text" name="title" value="<%= @task.title %>"/><br>
  <textarea name="description" <%= @task.description %>></textarea><br>
  <input type="submit">
</form>